#!/bin/bash

case $1 in
  "BTCUSD")
    curl -s https://api.coindesk.com/v1/bpi/currentprice.json | jq '.bpi.USD.rate' | sed "s/\"//" | sed "s/\..*//"
  ;;
  "USDRUB")
    curl -s https://www.cbr-xml-daily.ru/daily_json.js | jq '.Valute.USD.Value'
  ;;
  "EURRUB")
    curl -s https://www.cbr-xml-daily.ru/daily_json.js | jq '.Valute.EUR.Value'
  ;;
esac
