#!/bin/bash

# Check if input file is provided
if [ $# -ne 1 ]; then
    echo "Usage: $0 <input_video>"
    exit 1
fi

INPUT="$1"
BASENAME="${INPUT%.*}"
OUTPUT="${BASENAME}_processed.mp4"

# Normalize audio and speed up video
ffmpeg -i "$INPUT" \
    -filter:v "setpts=PTS/1.5" -filter:a "atempo=1.5" \
    "$OUTPUT"

echo "Processed video saved as: $OUTPUT"
