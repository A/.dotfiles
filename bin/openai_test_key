#!/bin/bash

# test_openai_key.sh
# Ğ¢ĞµÑÑ‚Ğ¸Ñ€ÑƒĞµÑ‚ OpenAI API ĞºĞ»ÑÑ‡

set -e

# Ğ¦Ğ²ĞµÑ‚Ğ° Ğ´Ğ»Ñ Ğ²Ñ‹Ğ²Ğ¾Ğ´Ğ°
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# ĞŸĞ¾Ğ»ÑƒÑ‡Ğ°ĞµĞ¼ API ĞºĞ»ÑÑ‡
if [ -n "$1" ]; then
    API_KEY="$1"
elif [ -n "$OPENAI_API_KEY" ]; then
    API_KEY="$OPENAI_API_KEY"
else
    echo -e "${RED}âŒ Error: No API key provided${NC}"
    echo "Usage: ./test_openai_key.sh YOUR_API_KEY"
    echo "   or: export OPENAI_API_KEY='your-key' && ./test_openai_key.sh"
    exit 1
fi

echo -e "${BLUE}ğŸ” Testing OpenAI API key...${NC}\n"

# Ğ¢ĞµÑÑ‚ 1: ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° Ğ²Ğ°Ğ»Ğ¸Ğ´Ğ½Ğ¾ÑÑ‚Ğ¸ ĞºĞ»ÑÑ‡Ğ°
echo -e "${BLUE}[1/2] Checking API key validity...${NC}"
response=$(curl -s -w "\n%{http_code}" https://api.openai.com/v1/models \
    -H "Authorization: Bearer $API_KEY")

http_code=$(echo "$response" | tail -n1)
body=$(echo "$response" | sed '$d')

if [ "$http_code" != "200" ]; then
    echo -e "${RED}âŒ API key is INVALID (HTTP $http_code)${NC}\n"
    echo "$body" | python3 -m json.tool 2>/dev/null || echo "$body"
    exit 1
fi

echo -e "${GREEN}âœ… API key is valid${NC}"
model_count=$(echo "$body" | grep -o '"id"' | wc -l | tr -d ' ')
echo -e "${BLUE}ğŸ“Š Available models: $model_count${NC}\n"

# Ğ¢ĞµÑÑ‚ 2: ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° Ñ€Ğ°Ğ±Ğ¾Ñ‚Ñ‹ API
echo -e "${BLUE}[2/2] Testing API call...${NC}"
chat_response=$(curl -s https://api.openai.com/v1/chat/completions \
    -H "Content-Type: application/json" \
    -H "Authorization: Bearer $API_KEY" \
    -d '{
        "model": "gpt-4o-mini",
        "messages": [{"role": "user", "content": "Say hello"}],
        "max_tokens": 10
    }')

if echo "$chat_response" | grep -q '"choices"'; then
    echo -e "${GREEN}âœ… API calls working${NC}"
    model=$(echo "$chat_response" | grep -o '"model": "[^"]*"' | head -1 | cut -d'"' -f4)
    echo -e "${BLUE}ğŸ“Œ Model: $model${NC}"
    
    # Ğ˜Ğ·Ğ²Ğ»ĞµĞºĞ°ĞµĞ¼ Ğ¾Ñ‚Ğ²ĞµÑ‚
    content=$(echo "$chat_response" | grep -o '"content": "[^"]*"' | head -1 | cut -d'"' -f4)
    if [ -n "$content" ]; then
        echo -e "${BLUE}ğŸ’¬ Response: $content${NC}"
    fi
elif echo "$chat_response" | grep -q "insufficient_quota"; then
    echo -e "${YELLOW}âš ï¸  API key valid but quota exceeded${NC}"
    echo "$chat_response" | python3 -m json.tool 2>/dev/null || echo "$chat_response"
    exit 1
elif echo "$chat_response" | grep -q "error"; then
    echo -e "${RED}âŒ API call failed${NC}"
    echo "$chat_response" | python3 -m json.tool 2>/dev/null || echo "$chat_response"
    exit 1
else
    echo -e "${RED}âŒ Unexpected response${NC}"
    echo "$chat_response"
    exit 1
fi

echo -e "\n${GREEN}ğŸ‰ All tests passed!${NC}"
