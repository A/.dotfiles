XDG_CONFIG_HOME=${HOME}/.config
ZSH_CONFIG_HOME=$XDG_CONFIG_HOME/zsh
ZSH_THEME="norm"
ZSH="${HOME}/.oh-my-zsh"

for f (~/.config/zsh/config.d/*(N.))  . $f

autoload -U compinit && compinit

source $HOME/.oh-my-zsh/oh-my-zsh.sh

# Make android tools available globally
export ANDROID_HOME=/Users/$USER/Library/Android/sdk
export PATH=${PATH}:$ANDROID_HOME/emulator:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$ANDROID_HOME/tools/bin

# React native need this to be set for some reasons
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# Add NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Add RVM to PATH for scripting. Make sure this is the last PATH variable change.
export PATH="$PATH:$HOME/.rvm/bin"
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*

export LDFLAGS="-L/usr/local/opt/openssl@1.1/lib"
export CPPFLAGS="-I/usr/local/opt/openssl@1.1/include"
export PATH="/usr/local/opt/openssl@1.1/bin:$PATH"

eval "$(pyenv init --path)"
eval "$(pyenv init -)"

export MAILCHECK=0
